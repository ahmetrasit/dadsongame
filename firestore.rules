rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Global game definitions - public read/write for development
    match /definitions/global {
      allow read, write: if true;
    }

    // Maps collection - public read/write for development
    match /maps/{mapId} {
      allow read, write: if true;
    }

    // Player saves - only accessible by the player who owns them
    match /players/{playerId}/saves/{saveId} {
      allow read, write: if request.auth != null && request.auth.uid == playerId;
    }

    // Gallery collection - public read/write for sprite sharing
    match /gallery/{spriteId} {
      allow read: if true;
      allow write: if true;
    }

    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
