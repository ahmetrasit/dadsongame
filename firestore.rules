rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Global game definitions - read by all, write by admins only
    match /definitions/global {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Maps collection - public read, authenticated write
    match /maps/{mapId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null;
    }

    // Player saves - only accessible by the player who owns them
    match /players/{playerId}/saves/{saveId} {
      allow read, write: if request.auth != null && request.auth.uid == playerId;
    }

    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
